{
  "scopeName": "source.mermaid",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#string"
    },
    {
      "include": "#number"
    },
    {
      "include": "#operator"
    },
    {
      "include": "#variable"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mermaid",
          "begin": "//",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.mermaid"
            }
          },
          "end": "$",
          "name": "comment.line.double-slash.mermaid"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "keyword.control.mermaid",
          "match": "\\b(graph|subgraph|end|classDef|class|linkStyle|click|style|interpolate)\\b"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.mermaid",
          "begin": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.mermaid"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.mermaid"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.mermaid",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "name": "constant.numeric.mermaid",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "name": "keyword.operator.mermaid",
          "match": "[-=<>+*/]"
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "name": "variable.other.mermaid",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}